{{ form_start(form) }}

{{ form_row(form.username) }}
{{ form_row(form.password) }}
{{ form_row(form.email)    }}
{{ form_row(form.birthday_year) }}
{{ form_row(form.gender)   }}
{{ form_row(form.pref)   }}

<div class="form-group row">
	<div class="col-form-label col-3 ">
		{{ "Created"|trans }}
	</div>
	<div class="col">
		<div class="form-control bg-secondary text-light">
			{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}
		</div>
	</div>
</div>
<div class="form-group row">
	<div class="col-form-label col-3 ">
		{{ "Updated"|trans }}
	</div>
	<div class="col">
		<div class="form-control bg-secondary text-light">
			{{ user.updated ? user.updated|date('Y-m-d H:i:s') : '' }}
		</div>
	</div>
</div>
<div class="form-group row">
	<div class="col-form-label col-3 ">
		{{ "Del_flag"|trans }}
	</div>
	<div class="col">
		<div class="form-control bg-secondary text-light">
			{{ user.delFlag ? 'Yes' : 'No' }}
		</div>
	</div>
</div>

<div class="row">
	<div class="col-2">
		<button type="submit" class="btn btn-primary btn-block">
			{{ button_label|default('Save') }}
		</button>
	</div>
	<div class="col-2">
		<button type="reset" class="btn btn-secondary btn-block">
			{{ button_label_reset|default('Reset') }}
		</button>
	</div>
</div>
{{ form_end(form) }}
