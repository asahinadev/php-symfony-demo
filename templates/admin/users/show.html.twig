{% extends 'admin.html.twig' %}

{% block title %}
{{ controller_name }}
{% endblock %}

{% block nav_link_users %}
active
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
<div class="form-group row">
	<div class="col pt-5">
		<div class="card">
			<h1 class="card-header">
				{{ "Users Info"|trans }}
			</h1>
			<div class="card-body">
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Id"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.id }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Username"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.username }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Password"|trans }}
					</div>
					<div class="col">
						<div class="form-control">********</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Email"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.email }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Gender"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.gender.name }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Pref"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.pref.name }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Created"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.created ? user.created|date('Y-m-d H:i:s') : '' }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Updated"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.updated ? user.updated|date('Y-m-d H:i:s') : '' }}
						</div>
					</div>
				</div>
				<div class="form-group row">
					<div class="col-form-label col-3 ">
						{{ "Del_flag"|trans }}
					</div>
					<div class="col">
						<div class="form-control">
							{{ user.delFlag ? 'Yes' : 'No' }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-sm-12 col-md-4 col-xl-3 pt-5">
		<div class="list-group">
			<a class="list-group-item" href="{{ path('admin_users') }}">{{ 'User Index'|trans }}</a>
			<a class="list-group-item" href="{{ path('admin_users_new') }}">{{ 'User Create new'|trans }}</a>
			<a class="list-group-item active disable"
				href="{{ path('admin_users_show', {'id': user.id}) }}">{{ 'User View'|trans }}</a>
			<a class="list-group-item"
				href="{{ path('admin_users_edit', {'id': user.id}) }}">{{ 'User Edit'|trans }}</a>
			<div class="list-group-item">
				{{ include('admin/users/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</div>
{% endblock %}