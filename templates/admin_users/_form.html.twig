{{ form_start(form) }}

{{ form_row(form.username) }}
{{ form_row(form.password) }}
{{ form_row(form.email)    }}

<div class="row">
	<div class="col-2">
		<button type="submit" class="btn btn-primary btn-block">
			{{ button_label|default('Save') }}
